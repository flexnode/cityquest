<div class="location">
  <div class="map">
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=120x100&sensor=false&zoom=15&markers=#{location.latitude}%2C#{location.longitude}" %>
  </div>
  <div class="info">
    <h3><%= location.address %></h3>
    <p>3.0 km away</p>
  </div>
</div>
